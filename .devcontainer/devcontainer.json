{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-contrib/features/prettier:1": {},
    "ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/black:2": {}
  },
  "customizations": {
    "codespaces": {
      "openFiles": ["compdecks/templates/layout.html"]
    },
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.black-formatter",
        "bradlc.vscode-tailwindcss",
        "wholroyd.jinja"
      ]
    }
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "source .venv/bin/activate",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "pip install -r requirements.txt && flask --app=compdecks --debug run",
    "css": "tailwindcss -i compdecks/static/main.css -o compdecks/static/output.css --watch"
  },
  "portsAttributes": {
    "5000": {
      "label": "Application"
    }
  },
  "forwardPorts": [5000]
}
